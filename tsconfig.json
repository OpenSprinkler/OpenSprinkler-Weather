{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "outDir": "js/",
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "errors.ts",
    "server.ts",
    "types.ts",
    "routes/**/*"
  ]
}
